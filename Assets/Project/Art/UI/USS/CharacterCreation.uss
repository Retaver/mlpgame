/* CharacterCreation.uss � single stylesheet (palette + compact + parity) */

/* Layout */
.cc-screen { flex-direction: column; flex-grow: 1; padding: 12px 14px; background-color: #111317; color: #E9EDF1; }
.cc-header { flex-direction: column; margin-bottom: 8px; }
.cc-title { -unity-font-style: bold; font-size: 22px; margin-bottom: 2px; }
.cc-sub   { color: #9BA3AE; font-size: 12px; }

.cc-grid { flex-direction: row; flex-grow: 1; gap: 10px; }
.cc-left  { flex-basis: 36%; min-width: 320px; }
.cc-right { flex-basis: 64%; min-width: 420px; }
.cc-col { flex-direction: column; }
.cc-row { flex-direction: row; }
.cc-gap-sm { gap: 6px; }
.cc-gap-md { gap: 10px; }

/* Cards */
.cc-card {
    background-color: #171A1F;
    border-left-color: #2B313B; border-right-color: #2B313B; border-top-color: #2B313B; border-bottom-color: #2B313B;
    border-left-width: 1px; border-right-width: 1px; border-top-width: 1px; border-bottom-width: 1px;
    border-radius: 10px;
    padding: 8px;
}
.cc-card-title { unity-font-style: bold; font-size: 14px; margin-bottom: 6px; color: #E9EDF1; }

/* Fields */
.cc-label { color: #C9D2DC; font-size: 12px; min-width: 80px; }
.cc-section-label { margin-top: 6px; color: #9BA3AE; }
.cc-field-row { flex-direction: row; align-items: center; gap: 6px; }

/* TextField � strong parity so Play Mode matches Builder */
.cc-input { flex-grow: 1; background-color: #232833; color: #E9EDF1;
    border-left-color: #2F3744; border-right-color: #2F3744; border-top-color: #2F3744; border-bottom-color: #2F3744;
    border-left-width: 1px; border-right-width: 1px; border-top-width: 1px; border-bottom-width: 1px;
    border-radius: 6px;
}
.cc-input .unity-text-input { background-color: #232833; color: #E9EDF1; }
TextField.cc-input { background-color: #232833; } /* specificity bump */
TextField.cc-input > .unity-text-input { background-color: #232833; color: #E9EDF1; }
